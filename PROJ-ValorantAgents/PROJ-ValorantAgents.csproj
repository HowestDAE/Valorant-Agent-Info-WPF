<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>PROJ_ValorantAgents</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Data\agents.json" />
    <None Remove="Resources\Data\agentsAPI_local.json" />
    <None Remove="Resources\Fonts\americorps.ttf" />
    <None Remove="Resources\Fonts\DIN-Next-LT-Pro-Regular.ttf" />
    <None Remove="Resources\Fonts\DINNextLTPro-Bold.ttf" />
    <None Remove="Resources\Fonts\DINNextLTPro-Medium.ttf" />
    <None Remove="Resources\Fonts\Proxima Nova Black.otf" />
    <None Remove="Resources\Fonts\Proxima Nova Bold.otf" />
    <None Remove="Resources\Fonts\Proxima Nova Extrabold.otf" />
    <None Remove="Resources\Fonts\Proxima Nova Thin.otf" />
    <None Remove="Resources\Fonts\Proxima-Nova-Bold.otf" />
    <None Remove="Resources\Fonts\Proxima-Nova-Thin.otf" />
    <None Remove="Resources\Fonts\ProximaNova-Regular.otf" />
    <None Remove="Resources\Fonts\ProximaNovaThin.otf" />
    <None Remove="Resources\Fonts\Tungsten-Bold.otf" />
    <None Remove="Resources\Fonts\Tungsten-Bold.ttf" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Data\agents.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Data\agentsAPI_local.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Fonts\DINNextLTPro-Bold.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\DINNextLTPro-Medium.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Proxima-Nova-Bold.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Proxima-Nova-Thin.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\ProximaNova-Regular.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Tungsten-Bold.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
